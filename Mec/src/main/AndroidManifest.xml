<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shuhuasoft">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.mec.MecApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.mec.activity.MainTabActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mec.activity.MineInfoActivity" />
        <activity android:name="com.mec.activity.MineSettingsActivity" />
        <activity android:name="com.mec.activity.MineSafeActivity" />
        <activity android:name="com.mec.activity.UserLoginActivity" />
        <activity android:name="com.mec.activity.UserRegitActivity" />
    </application>

</manifest>