<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="@color/other_statusbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="@dimen/status_bar_height">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/ic_avatar_background"
            android:padding="2dp"
            android:src="@mipmap/default_avatar"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@mipmap/login_right"
                android:drawablePadding="8dp"
                android:text="注册/登录"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvUserBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额：¥99999"
                android:textColor="#FFFFFF"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingStart="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            android:textColor="#333333"
            android:drawableEnd="@mipmap/item_right"
            android:textSize="16sp" />

        <include layout="@layout/merge_horizontal_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账单明细"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            android:textColor="#333333"
            android:drawableEnd="@mipmap/item_right"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="24dp"
        android:paddingStart="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            android:textColor="#333333"
            android:drawableEnd="@mipmap/item_right"
            android:textSize="16sp" />

        <include layout="@layout/merge_horizontal_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="安全管理"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            android:textColor="#333333"
            android:drawableEnd="@mipmap/item_right"
            android:textSize="16sp" />

        <include layout="@layout/merge_horizontal_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            android:textColor="#333333"
            android:drawableEnd="@mipmap/item_right"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>